    "version": "0.2.0",
    "configurations": [
    {
        "name": "benchmark",
        "type": "cppdbg",
        "request": "launch",
        "program": "/usr/bin/python3",
        "args": ["-m", "benchmark", "1", "0"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ]
    },

        {
